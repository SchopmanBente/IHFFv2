@using ProjectIHFFv2.Models

@model AfgerondeBestelling
<header style="margin-top:2%; float:initial;">
    <p class="breadcrumb">Step 3/3</p>
    <h1 style="margin-top:5px;">3. Confirmation</h1>
    @Html.Partial("~\\views\\shared\\_WinkelmandStap.cshtml")
</header>

@if (Model.Events.Count > 0)
{
<h1 style="margin-top:10px;"> Dear @Model.Klant.voornaam</h1>
<h3 class="confirmation-p"> Your reservation is confirmed!</h3>

<section class="afgerond-section">
    <p class="confirmation-p">please check if your reservation is correct:</p>
    <ul style="list-style-type:none;">
        @foreach (ShoppingCartItem i in Model.Events)
        {
        <li>
            <tekst class="confirmation-p" style="font-style:italic;"> @i.Gebeurtenis.begin_datumtijd.ToString("dd-MM HH:mm"), @i.Gebeurtenis.naam <b>x @i.AantalPersonen</b></tekst>
        </li>
        }
    </ul>

    <hr id="scheiding-afgerond"/>
    <p class="confirmation-p"> Something wrong? Send an email to <u>info@CelluloidSilver.nl</u> to cancel or change your reservation.</p>

    
    <p class="confirmation-p">Your exclusive pickupcode is <b> @Model.ophaalcode </b>, this code will be your ticket to the festival.</p>

    <p class="confirmation-p">Make sure to take a look at our @Html.ActionLink("Discover Haarlem", "ViewRoute", "Culture")  page. Your starting point could be <b> @Model.Events.First().Gebeurtenis.Locatie.naam in @Model.Events.First().Gebeurtenis.Locatie.plaats. </b> But you're free to create your own journey. </p>

</section>


}


else
{
 <h1 style="margin-top:10px;"> Nothing to see here....</h1>
}