<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://fonts.googleapis.com/css?family=Poppins" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
<script src="@Url.Content("~/Scripts/script.js")"></script>
   

</head>
<body>
    <div style="margin-bottom:15px;" class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action("Index", "Home" )">
                    <img src="~/Content/Images/Logo.PNG" width="130" height="50"/> 
                </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Films", "Wednesday", "Film")</li>
                    <li>@Html.ActionLink("Specials", "Wednesday", "Special")</li>
                    <li>@Html.ActionLink("Food", "Haarlem", "Restaurant")</li>
                    <li>@Html.ActionLink("Culture", "Monument", "Culture")</li>
                    <li>@Html.ActionLink("Discover Haarlem", "ViewRoute", "Culture")</li>
                    <li>@Html.ActionLink("Wishlist", "Index", "Wishlist")</li>
                </ul>
                <!-- @Html.Partial("_LoginPartial") -->
                <a href="@Url.Action("Index", "Cart")"><img src="~/Content/Images/Cart.png" style="max-height:50px;"/></a>
            </div>
        </div>
    </div>
    <div>
        <br />
        @RenderBody()
        
        <footer style="float:left;">
          <h4> Contact </h4> <h4> FAQ </h4> <h4> Sitemap </h4>
            <ul> 
                <li> 
               <h5>Celluloid & Silver</h5>
                </li>
                <li>
                    <h5>Zijlweg 7</h5>
                </li>
                <li>
                    <h5>1234 AA Haarlem</h5>
                </li>
            </ul>
            
          
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")   
    @Scripts.Render("~/Scripts/jquery.validate.min.js") 
    @Scripts.Render("~/Scripts/jquery.validate.unobtrusive.min.js")
</body>
</html>
