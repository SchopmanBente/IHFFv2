@using ProjectIHFFv2.Models;
@model FilmDetailPresentationModel
@{
    ViewBag.Title = "ViewDetails";
}

<header>
    <p class="breadcrumb">@Html.ActionLink("Index", "Home") > @Html.ActionLink("Woensdag", "Film") > @Html.ActionLink("View Details", "ViewDetails", "Film", new { id = @Model.EventId }, null) </p>
    <h1>@Model.Naam</h1>
</header>
<section class="detail-left">
    <div>
        <img src="@Model.AfbeeldingUrl" />
        <p>@Model.Beschrijving</p>
        <iframe width="560" height="315" src="@Model.TrailerUrl" frameborder="0" allowfullscreen></iframe>
    </div>
    <div class="voorstellingen">
        <h3>Reveal the story..</h3>
        @foreach (var v in Model.filmVoorstellingen)
        {
            <div class="voorstelling-left">
                <p>@v.Event.begin_datumtijd.Value.Day @v.Event.begin_datumtijd.Value.Month-@v.Event.begin_datumtijd.Value.Year- @v.Event.begin_datumtijd.Value.Hour:@v.Event.begin_datumtijd.Value.Minute</p>
            </div>
            <div class="voorstelling-midden">
                <p>@v.Event.Locatie.naam @v.Event.Locatie.zaal</p>
                <p>@v.Event.Locatie.straat @v.Event.Locatie.huisnr</p>
                <p>@v.Event.Locatie.plaats</p>
                <p>Ticket: @v.Event.prijs</p>
            </div>
            <div class="voorstelling-right">
                @using (Html.BeginForm())
                {
                    @Html.TextBoxFor(c => c.AantalPersonen);
                    <input type="submit" id="@v.EventId" name="Cart" value="Add to cart" formaction="AddToCart" formmethod="post" />
                    <input type="submit" id="@v.EventId" name="Wishlist" value="Add to wishlist" formaction="AddToWishlist" formmethod="post" />
                }
            </div>
        }
    </div>

</section>
<section class="detail-right">
    <h3>Discover Haarlem's Culture</h3>
    @foreach (var c in Model.CultuurItems)
    {
        <section class="cultuuritem">
            <p>@c.naam</p>
            <p>@c.beschrijving</p>
            @Html.ActionLink("View", "ViewDetails", "Cultuur", new { id = @c.id }, new { @class = "btn btn-info" })
        </section>
    }
</section>
