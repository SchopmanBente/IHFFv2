@using ProjectIHFFv2.Models;
@model IEnumerable<FilmOverviewPresentationModel>
@{
    ViewBag.Title = "Zondag";
}
<header>
    <p class="breadcrumb">@Html.ActionLink("Index", "Home") > Film > @Html.ActionLink("Zondag", "Film") </p>
    <h1>Zondag</h1>
    @Html.Partial("~\\views\\shared\\_MovieDaySelection.cshtml");
</header>
<section>
    @foreach (FilmOverviewPresentationModel f in Model)
    {
        <section class="overview">
            <div class="film_image">
                <img width="100" height="120" src="@f.AfbeeldingUrl" />
            </div>
            <div class="film_text">
                <h3 class="headergegeven">@f.Naam</h3>
                <h4 class="headergegeven">@f.BeginDatumTijd @f.EventLocatie</h4>

                <p>
                    @f.Beschrijving
                    @Html.ActionLink("View Details", "ViewDetails", "Film", new { id = @f.EventId }, new { @class = "btn btn-info" })
                </p>
            </div>
        </section>
    }

</section>

