@using ProjectIHFFv2.Models;

@model IEnumerable<Event>

<header>
    <p class="breadcrumb">@Html.ActionLink("Index", "Home") > Restaurant >  @Html.ActionLink("Haarlem", "Restaurant") </p>
    <h1>Haarlem</h1>
    @Html.Partial("~\\views\\shared\\_RestaurantLocationSelection.cshtml");
</header>

@foreach (Event r in Model)
{


    <h3> @r.naam</h3>

    <img width="100" height="120" src="@r.afbeelding_url" />
        <p> @r.beschrijving</p>
        @Html.ActionLink("More info", "DetailPagina", "Restaurant", new { id = @r.EventId }, new { @class = "btn btn-info" })
}
