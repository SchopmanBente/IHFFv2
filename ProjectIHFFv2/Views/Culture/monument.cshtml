@using ProjectIHFFv2.Models;
@model IEnumerable<Cultuuritem> 
@{
    ViewBag.Title = "Monument";
}

<header>
    <p class="breadcrumb">@Html.ActionLink("Index", "Home") > Culture > @Html.ActionLink("Monument", "Monument", "Culture") </p>
    <h1>Monument</h1>
    @Html.Partial("~\\views\\shared\\_CultureTypeSelection.cshtml");
</header>
<section class="overview">
    @foreach (Cultuuritem f in Model)
    {
        <section class="itemOverview">
            <div class="film_image">
                @*<img width="100" height="130" src="@f.AfbeeldingUrl" /> //IMAGES AAN DE DATABASE TOEVOEGEN!!!*@
            </div>
            <div class="film_text">
                <header class="head-item">
                    <h3 class="headergegeven">@f.naam</h3>
                    <h4 class="headergegeven">@f.straatnaam @f.huisnr @f.toevoeging</h4>
                </header>
                <p class="beschrijving">
                    @f.beschrijving
                </p>
                <div class="item-button">
                    @Html.ActionLink("View Details", "ViewDetails", "Culture", new { id = @f.id }, new { @class = "btn btn-view btn-info" })

                </div>
            </div>
        </section>
    }

</section>

